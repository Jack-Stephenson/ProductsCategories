@model Association

<h1>Viewing Product: @ViewBag.Product.Name</h1>
<div class="row">
    <div class="col">
        <ul>
            @{
                foreach(Association a in ViewBag.Product.Categories)
                {
                    <li>@a.Category.Name</li>
                }
            }
        </ul>
    </div>
    <div class="col">
        <h2>Add Categories to Product</h2>
        <form action="addProductCategory" method="post">
            <div class="form-group">
                <select asp-for="CategoryId" class="form-control">
                    @{
                        foreach(Category c in ViewBag.AllCategories)
                        {
                            <option value="@c.CategoryId">@c.Name</option>
                        }
                    }
                </select>
            </div>
            <input type="hidden" name="ProductId" value="@ViewBag.Product.ProductId">
            <div class="form-group">
                <input type="submit" value="Add Category" class="btn btn-warning">
            </div>
        </form>
    </div>
</div>